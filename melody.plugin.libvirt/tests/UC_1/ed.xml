<?xml version="1.0" encoding="UTF-8"?><environment>

	<fwrules>
		<in access="allow" from="all" name="SSH" ports="22" protocols="tcp"/>
	</fwrules>
	
	<models>
		<model imageId="RHEL-6.3-minimal" instanceType="t1.micro" keyPairName="id_rsa" name="RHEL-6.3-minimal" region="qemu:///system">
			<network-management enable="true" method="ssh" port="22"/>
			<disk-management diskNodeSelector="//disk"/>
			<fwrules>
				<in>
					<fwrule access="allow" from="all" ports="8080" protocols="tcp"/>
					<fwrule herit="./environment/fwrules/in[@name='SSH']"/>
				</in>
			</fwrules>
			<disks>
				<disk deleteOnTermination="true" device="/dev/vda" rootDevice="true"/>
				<disk deleteOnTermination="true" device="/dev/vdb" size="3 G"/>
				<disk deleteOnTermination="true" device="/dev/vdc" size="6 G"/>
			</disks>
		</model>
	</models>
	
	<instances>
		
		<instance herit="./environment/models/model[@name='RHEL-6.3-minimal']" name="srv01">
			<network-management enable="false" interfaceNodeSelector="//network//interface[@device='eth1']" method="ssh" port="22"/>
			<disk-management diskNodeSelector="//disque"/>
			<network>
				<interface device="eth0"/>
				<interface device="eth1"/>
			</network>
			<disks>
				<disque deleteOnTermination="true" device="/dev/vda" rootDevice="true"/>
				<disque deleteOnTermination="true" device="/dev/vdb" size="3 G"/>
				<disque deleteOnTermination="true" device="/dev/vdc" size="6 G"/>
			</disks>
		</instance>
		
		<instance herit="./environment/models/model[@name='RHEL-6.3-minimal']" name="srv02">
			<network>
				<interface device="eth0"/>
				<interface device="eth1"/>
			</network>
		</instance>		
<!--
		<instance herit="./environment/models/model[@name='RHEL-6.3-minimal']" name="srv03" >
			<network>
				<interface device="eth0" ip="" fqdn="" />
				<interface device="eth1" ip="" fqdn="" />
			</network>
		</instance>		
-->
	</instances>
	
</environment>