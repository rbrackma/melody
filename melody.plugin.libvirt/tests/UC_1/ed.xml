<?xml version="1.0" encoding="UTF-8"?><environment>

	<global-fwrules>
		<tcp access="allow" directions="in" from-ips="all" name="SSH" to-ports="22"/>
	</global-fwrules>
	
	<models>
		<model imageId="RHEL-6.3-minimal" instanceType="t1.micro" keypair-name="id_rsa" name="RHEL-6.3-minimal" region="qemu:///system">
			<network-management enable="true" method="ssh" port="22"/>
			<disk-management diskDevicesSelector="//disk"/>
			<fwrules>
				<tcp access="allow" directions="in" from-ips="all" to-ports="8080"/>
				<tcp herit="./environment/global-fwrules/tcp[@name='SSH']"/>
			</fwrules>
			<disks>
				<disk deleteOnTermination="true" device="/dev/vda" rootDevice="true"/>
				<disk deleteOnTermination="true" device="/dev/vdb" size="3 G"/>
				<disk deleteOnTermination="true" device="/dev/vdc" size="6 G"/>
			</disks>
		</model>
	</models>
	
	<instances>
		
		<instance herit="./environment/models/model[@name='RHEL-6.3-minimal']" name="srv01">
			<network-management method="ssh" networkDevicesSelector="//if" port="22"/>
			<disk-management diskDevicesSelector="//disque"/>
			<firewall-management fireWallRulesSelector="//parefeu"/>
			<devices>
				<if device="eth0"/>
				<if device="eth1"/>
				<disque deleteOnTermination="true" device="/dev/vda" rootDevice="true"/>
				<disque deleteOnTermination="true" device="/dev/vdb" size="3 G"/>
				<disque deleteOnTermination="true" device="/dev/vdc" size="6 G"/>
			</devices>
			<parefeu>
				<udp access="allow" directions="in" from-ips="all" to-ports="51,123"/>
				<icmp access="allow" directions="in" from-ips="all" types="0,8" codes="all"/>
			</parefeu>
		</instance>
		
		<instance herit="./environment/models/model[@name='RHEL-6.3-minimal']" name="srv02">
			<network>
				<interface device="eth0"/>
				<interface device="eth1"/>
			</network>
		</instance>		
