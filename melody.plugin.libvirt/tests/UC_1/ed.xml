		<instance herit="./environment/models/model[@name='RHEL-6.3-minimal']" name="srv03" >
			<network>
				<interface device="eth0" ip="" fqdn="" />
				<interface device="eth1" ip="" fqdn="" />
			</network>
		</instance>		
-->
	</instances>
	
</environment>