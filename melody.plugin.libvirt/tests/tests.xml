<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE project>

<project name="melody_test_plugin_libvirt" basedir="../.." default="all">

	<path id="classpathElements">
		<fileset dir="./melody.tests/common/lib/">
			<include name="**/*.jar" />
		</fileset>
	</path>

	<target name="libvirt_UC1_01_create_env">
		<java classname="com.wat.melody.cli.Launcher" fork="true">
			<arg value="./melody.plugin.libvirt/tests/UC_1/mc.properties" />
			<arg value="-o" />
			<arg value="create_env" />
			<classpath refid="classpathElements" />
		</java>
	</target>

	<target name="libvirt_UC1_05_update_disks">
		<java classname="com.wat.melody.cli.Launcher" fork="true">
			<arg value="./melody.plugin.libvirt/tests/UC_1/mc.properties" />
			<arg value="-o" />
			<arg value="update_disk_devices" />
			<classpath refid="classpathElements" />
		</java>
	</target>

	<target name="libvirt_UC1_06_destroy_env">
		<java classname="com.wat.melody.cli.Launcher" fork="true">
			<arg value="./melody.plugin.libvirt/tests/UC_1/mc.properties" />
			<arg value="-o" />
			<arg value="destroy_env" />
			<classpath refid="classpathElements" />
		</java>
	</target>

	<target name="all" depends="libvirt_UC1_01_create_env, libvirt_UC1_05_update_disks, libvirt_UC1_06_destroy_env" />

</project>
