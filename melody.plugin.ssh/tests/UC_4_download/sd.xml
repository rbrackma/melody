<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE project>

<sequence default="main" basedir=".">

	<order name="main">

		<property name="IP" value="127.0.0.1"/>
		<property name="property1" value="salut les filles"/>

		<echo message="Receiving files from 'IP:§[IP]§' ..."/>

		<download host="§[IP]§" login="jboss" keypair-name="id_rsa_aws" trust="y" max-par="10" >
			<resources
				src-basedir="/tmp/melody/scp/UC_1_upload"
				match="**"
				dest-basedir="./download/§[IP]§"
				dir-modifiers="770"
				link-option="COPY_UNSAFE_LINKS" >
				<exclude match="**/file1.*"/>
				<include	match="**/file2.tmpl"
							dest-path="templates/§[IP]§/file2.§[IP]§"
							template="y" />
			</resources>
		</download>

		<echo message="Files successfully recevied from 'IP:§[IP]§'."/>

	</order>

</sequence>