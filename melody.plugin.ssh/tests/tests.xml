<?xml version="1.0" encoding="UTF-8"?>
<project name="melody_test_plugin_ssh" basedir="../.." default="all">

	<path id="classpathElements">
		<fileset dir="./melody.tests/common/lib/">
			<include name="**/*.jar" />
		</fileset>
	</path>

	<target name="Scp_UC0">
		<java classname="com.wat.melody.cli.Launcher" fork="true">
			<arg value="./melody.plugin.ssh/tests/UC_0/mc.properties" />
			<classpath refid="classpathElements" />
		</java>
	</target>

	<target name="Scp_UC1">
		<java classname="com.wat.melody.cli.Launcher" fork="true">
			<arg value="./melody.plugin.ssh/tests/UC_1/mc.properties" />
			<classpath refid="classpathElements" />
		</java>
	</target>

	<target name="Scp_UC2">
		<java classname="com.wat.melody.cli.Launcher" fork="true">
			<arg value="./melody.plugin.ssh/tests/UC_2/mc.properties" />
			<arg value="-v" />
			<classpath refid="classpathElements" />
		</java>
	</target>

	<target name="all" depends="Scp_UC0, Scp_UC1, Scp_UC2" />

</project>
