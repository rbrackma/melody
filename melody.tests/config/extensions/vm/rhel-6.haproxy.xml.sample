<?xml version="1.0" encoding="UTF-8"?>

<environment>

	<models>
		<model herit="./environment/models/model[@name='rhel-6']" name="rhel-6.haproxy">
			<rhn-channels>
				<!-- mandatory child channel for haproxy -->
				<channel name="rhel-x86_64-server-lb-6"/>
			</rhn-channels>
			<packages>
				<!-- haproxy -->
				<package arch="x86_64" name="haproxy"/>
			</packages>
			<services>
				<!-- start haproxy server -->
				<service name="haproxy" state="on"/>
			</services>
			<credentials>
				<!-- haproxy user and group -->
				<user id="188" login="haproxy" password="haproxypwd@1" ref-group-name="haproxy"/>
				<group id="188" name="haproxy"/>
			</credentials>
		</model>
	</models>

</environment>