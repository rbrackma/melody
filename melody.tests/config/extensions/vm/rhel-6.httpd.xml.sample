<?xml version="1.0" encoding="UTF-8"?>

<environment>

	<models>
		<model herit="./environment/models/model[@name='rhel-6']" name="rhel-6.httpd">
			<rhn-channels>
				<!-- mandatory child channel for mod_jk -->
				<channel name="jbappplatform-6-x86_64-server-6-rpm"/>
			</rhn-channels>
			<packages>
				<!-- apache httpd server -->
				<package arch="x86_64" name="httpd"/>
				<!-- mod_jk -->
				<package arch="x86_64" name="mod_jk-ap22"/>
			</packages>
			<services>
				<!-- start apache httpd server -->
				<service name="httpd" state="on"/>
			</services>
			<credentials>
				<!-- apache httpd user and group -->
				<user id="48" login="apache" password="apachepwd@1" ref-group-name="apache"/>
				<group id="48" name="apache"/>
			</credentials>
		</model>
	</models>

</environment>