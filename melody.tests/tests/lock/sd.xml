<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE project>

<sequence default="do">

	<order name="do">
		<call orders="do1,do2" />
	</order>

	<order name="do1">

		<foreach items="//instance" item-name="srv">
			<synchronize max-par="1">
				<echo message="§[srv]§" />
				<sleep millis="2000" />
			</synchronize>
		</foreach>

	</order>

	<order name="do2">

		<foreach items="//instance" item-name="srv">
			<synchronize max-par="1">
				<echo message="§[srv]§" />
				<sleep millis="2000" />
			</synchronize>
		</foreach>

	</order>

</sequence>
