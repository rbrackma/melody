<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE project>

<sequence default="do">

	<order name="do">

		<foreach	items="//instance"
					item-name="srv"
					max-par="1">
		
			<property name="ip" value="§[§[srv]§/@IP_priv]§"/>
			<property name="name" value="§[§[srv]§/@name]§"/>

			<echo message="instance '§[name]§' as IP '§[ip]§'"/>

			<foreach	items="§[srv]§/*"
						item-name="mod">
				<echo message="§[node-name(§[mod]§)]§ : §[§[mod]§/text()]§"/>
			</foreach>
			
			<echo message="-------------------"/>

		</foreach>

	</order>

</sequence>
