<?xml version="1.0" encoding="UTF-8"?><environment>
<models>
	<model name="my_model">
		<packages>
			<package name="pck1" arch="x386"/>
			<package name="pck2" arch="x386"/>
			<package name="pck3" arch="x386"/>
		</packages>		
	</model>
</models>
<DEV>
	<serverAWS>
	
		<FRONTS>
		
			<instance IP_priv="123.123.123.123" name="dev-web1" herit="./environment/models/model[matches(@name,'model')]">
				<region>eu-west-1</region>
				<image-id>ami-59d0e22d</image-id>
				<instance-type>t1.micro</instance-type>
				<keypair>sshkey-gct2</keypair>
				<fwrules>
					<in>
						<fwrule from="all" ports="80,443" protocols="tcp,udp"/>
						<fwrule access="allow" from="all" ref="./environment/global_fwrules/in[@name='SSH']"/>
					</in>
					<out>
						<fwrule access="allow" ports="1521-1531" protocols="tcp,udp" to="§[string-join(./environment/DEV//DBS/instance/@IP_priv,',')]§"/>
					</out>
				</fwrules>
			</instance>
			
			<instance IP_priv="123.123.123.124" name="dev-web2" herit="./environment/models/model[@name='my_model']">
				<region>eu-west-1</region>
				<image-id>ami-59d0e22d</image-id>
				<instance-type>t1.micro</instance-type>
				<keypair>sshkey-gct2</keypair>
				<fwrules>
					<in>
						<fwrule from="all" ports="80,443" protocols="tcp,udp"/>
						<fwrule access="allow" from="all" ref="./environment/global_fwrules/in[@name='SSH']"/>
					</in>
				</fwrules>
			</instance>
			
		</FRONTS>
		
		
		<DBS>
		
			<instance IP_priv="123.123.123.125" name="dev-db1" herit="./environment/models/model[@name='my_model']">
				<region>eu-west-1</region>
				<image-id>ami-59d0e22d</image-id>
				<instance-type>t1.micro</instance-type>
				<keypair>sshkey-gct2</keypair>
				<fwrules>
					<in>
						<fwrule access="allow" from="§[string-join(./environment/DEV//FRONTS/instance/@IP_priv,',')]§" ports="1521-1531" protocols="tcp,udp"/>
						<fwrule access="allow" from="all" ref="./environment/global_fwrules/in[@name='SSH']"/>
					</in>
				</fwrules>
			</instance>
			
		</DBS>
		
	</serverAWS>
</DEV>	
